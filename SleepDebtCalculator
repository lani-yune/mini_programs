const getActualSleepHours = () => 8 + 8 + 8 + 8 + 8 + 0 + 8;

const getIdealSleepHours = (idealHours) => idealHours * 7;

const calculateSleepDebt = () => {
  const actualSleepHours = getActualSleepHours();
  const idealSleepHours = getIdealSleepHours(8);
  const sleepDebt = idealSleepHours - actualSleepHours;
  if (actualSleepHours === idealSleepHours) {
    return `User slept the perfect amount! ðŸ˜´`;
  } else if (actualSleepHours > idealSleepHours) {
    return `User slept more than needed by ${sleepDebt} hours. ðŸ›Œ`;
  } else if (actualSleepHours < idealSleepHours) {
    return `User should rest...they lack ${sleepDebt} hours of sleep! ðŸ¥±`
  }
}

console.log(calculateSleepDebt());
